@model BookManagement.Models.Book
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-12">
        <h3>Update Book</h3>
        <form method="post" asp-action="Edit" asp-controller="Books">
            <input type="hidden" asp-for="BookId" />
            <div class="form-group row mb-2">
                <label asp-for="Title" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="Author" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="PublicationYear" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="PublicationYear" class="form-control" />
                    <span asp-validation-for="PublicationYear" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="Price" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="TotalPage" class="col-form-label col-2"></label>
                <div class="col-4">
                    <input type="text" asp-for="TotalPage" class="form-control" />
                    <span asp-validation-for="TotalPage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}



